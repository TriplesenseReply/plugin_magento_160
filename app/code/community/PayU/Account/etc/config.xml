<?xml version="1.0" encoding="UTF-8"?>
<config>
    <modules>
        <PayU_Account>
            <version>2.2.0</version>
            <depends>
                <Mage_Payment/>
            </depends>
        </PayU_Account>
    </modules>
    <global>
        <models>
            <payu_account>
                <class>PayU_Account_Model</class>
            </payu_account>
        </models>
        <helpers>
            <payu_account>
                <class>PayU_Account_Helper</class>
            </payu_account>
        </helpers>
        <blocks>
            <payu_account>
                <class>PayU_Account_Block</class>
            </payu_account>
        </blocks>
    </global>
    <adminhtml>
        <translate>
            <modules>
                <PayU_Account>
                    <files>
                        <default>PayU_Account.csv</default>
                    </files>
                </PayU_Account>
            </modules>
        </translate>
    </adminhtml>
    <frontend>
        <routers>
            <payu_account>
                <use>standard</use>
                <args>
                    <module>PayU_Account</module>
                    <frontName>payu_account</frontName>
                </args>
            </payu_account>
        </routers>
        <translate>
            <modules>
                <PayU_Account>
                    <files>
                        <default>PayU_Account.csv</default>
                    </files>
                </PayU_Account>
            </modules>
        </translate>
    </frontend>
    <default>
        <payment>
            <payu_account>
                <active>0</active>
                <title>PayU</title>
                <model>payu_account/payment</model>
            </payu_account>
        </payment>
    </default>
</config>
